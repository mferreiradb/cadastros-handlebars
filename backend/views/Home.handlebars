<style>
    .tabela {
    background-color: #D9D6D2;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 50px;
    border-radius: 10px;
    text-align: center;
    }
    .linha {
    border-left: 1px solid black;
    color: #fff;
    }
    table {
    border: black 1px solid;
    background-color: #450c79;
    padding: 50px;
    border-radius: 10px;
    }
    td {
    padding: 10px;
    text-align: center;
    }
</style>

<main>

  <div class="tabela">

    <table>

      <tr class="linha">
        <th>ID</th>
        <th>Nome</th>
        <th>Idade</th>
        <th>Email</th>
        <th>Data Cadastro</th>
      </tr>

      {{#each users}}
        <tr class="linha">
          <td>{{id}}</td>
          <td>{{nome}}</td>
          <td>{{idade}}</td>
          <td>{{email}}</td>
          <td>{{createdAt}}</td>
        </tr>
      {{/each}}
    </table>

  </div>

</main>